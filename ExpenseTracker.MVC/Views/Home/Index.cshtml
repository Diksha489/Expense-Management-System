@{
    ViewData["Title"] = "Home";
}

<style>
    .hero-section {
        background: linear-gradient(90deg, #d4ffea, #ffe4ad, #ffb3a7);
        min-height: calc(100vh - 110px);
        display: flex;
        align-items: center;
        padding: 60px 20px;
    }

    .hero-title {
        font-size: 2.4rem;
        font-weight: 700;
        color: #0b5394;
        margin-bottom: 20px;
    }

    .hero-text {
        font-size: 1.05rem;
        line-height: 1.7;
        color: #333;
    }

    .hero-btn {
        padding: 10px 26px;
        font-size: 1rem;
        border-radius: 6px;
        margin-right: 10px;
    }

    .hero-img {
        max-width: 100%;
        height: auto;
        animation: float 3s ease-in-out infinite;
    }
    
    .image-slider img {
    transition: opacity 0.6s ease-in-out;
}


    keyframes float {
        0% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0); }
    }
</style>

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-md-6 mb-4 mb-md-0">
                <h1 class="hero-title">Welcome to Expense Management System</h1>

                <p class="hero-text">
                    Welcome to the <strong>Expense Management System</strong> app. This app helps you to manage your expenses and income. 
                    You can track your expenses and income, add new expenses and income, update and delete expenses and income. 
                    You can also see the statistics of your expenses and income. Visualize your expenses in a chart and graph. By using this app, 
                    you can manage your expenses and income and save your money from unwanted expenses.
                </p>

                <div class="mt-4">
                    <a href="/Auth/Register" class="btn btn-primary hero-btn">Join Now</a>
                    <a href="/Auth/Login" class="btn btn-outline-dark hero-btn">Learn More</a>
                </div>
            </div>

           <div class="col-md-6 text-center">

    <div class="image-slider">
        <img id="sliderImage" class="hero-img" src="/images/slide1.png" alt="Expense Illustration">
    </div>

</div>


        </div>
    </div>
</div>
<script>
    const images = [
        "/images/slide1.png",
        "/images/slide2.png",
        "/images/slide3.png"
    ];

    let index = 0;
    const slider = document.getElementById("sliderImage");

    setInterval(() => {
        index = (index + 1) % images.length;
        slider.style.opacity = 0;

        setTimeout(() => {
            slider.src = images[index];
            slider.style.opacity = 1;
        }, 500);

    }, 3000); // 3 seconds gap
</script>

