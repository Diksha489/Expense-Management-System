@model ExpenseTracker.MVC.Models.Expense

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center rounded-4">
                    <h3 class="m-0 fw-bold">⚠️ Delete Expense</h3>
                </div>

                <div class="card-body text-center">

                    <p class="fw-semibold mb-4" style="font-size:1.1rem;">
                        Are you sure you want to delete this expense?
                    </p>

                    <ul class="list-group text-start mb-4">
                        <li class="list-group-item">
                            <strong>Title:</strong> @Model.Title
                        </li>
                        <li class="list-group-item">
                            <strong>Amount:</strong> ₹@Model.Amount
                        </li>
                        <li class="list-group-item">
                            <strong>Category:</strong> @Model.Category
                        </li>
                        <li class="list-group-item">
                            <strong>Date:</strong> @Model.Date.ToString("dd-MM-yyyy")
                        </li>
                    </ul>

                    <form asp-action="DeleteConfirmed" method="post">

                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger px-4 rounded-3 fw-bold">
                                Delete
                            </button>

                            <a href="/Expenses/Index" class="btn btn-secondary px-4 rounded-3">
                                Cancel
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 1rem !important;
    }
    .list-group-item {
        font-size: 1rem;
        border: none;
        border-bottom: 1px solid #eee;
    }
</style>
