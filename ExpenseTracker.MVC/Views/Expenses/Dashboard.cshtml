    </div>

</div>

<!-- Chart JS -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const categoryData = @Html.Raw(ViewBag.CategoryData);

   const iconMap = {
    "Food": "ðŸ¥—",
    "Cloths": "ðŸ‘—",
    "Travel": "ðŸšŒ",
    "Home": "ðŸ¡",
    "Entertainment": "ðŸŽ‰",
    "Health": "ðŸ’Š",
    "Shopping": "ðŸ›’",
    "Bills": "ðŸ’¡"
};

const labels = categoryData.map(x => iconMap[x.Category] + " " + x.Category);

    const dataValues = categoryData.map(x => x.Amount);

    const colors = [
        '#ff6384',
        '#36a2eb',
        '#ffcd56',
        '#4bc0c0',
        '#9966ff',
        '#ff9f40',
    ];

    new Chart(document.getElementById('expenseChart'), {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                data: dataValues,
                backgroundColor: colors,
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: { font: { size: 14 } }
                }
            }
        }
    });

    // ---------------- MONTHLY EXPENSE CHART ----------------
    const monthlyData = @Html.Raw(ViewBag.MonthlyExpense);
    new Chart(document.getElementById('monthlyExpenseChart'), {
        type: 'bar',
        data: {
            labels: monthlyData.map(x => x.Month),
            datasets: [{
                label: 'Expenses',
                data: monthlyData.map(x => x.Total),
                backgroundColor: '#36a2eb'
            }]
        }
    });

    // ---------------- INCOME VS EXPENSE CHART ----------------
    const compareData = @Html.Raw(ViewBag.IncomeExpenseCompare);
    new Chart(document.getElementById('incomeExpenseChart'), {
        type: 'bar',
        data: {
            labels: compareData.map(x => x.Month),
            datasets: [
                {
                    label: 'Income',
                    data: compareData.map(x => x.Income),
                    backgroundColor: '#4bc0c0'
                },
                {
                    label: 'Expense',
                    data: compareData.map(x => x.Expense),
                    backgroundColor: '#ff6384'
                }
            ]
        }
    });

    // ---------------- SAVINGS GROWTH LINE ----------------
    new Chart(document.getElementById('savingsChart'), {
        type: 'line',
        data: {
            labels: compareData.map(x => x.Month),
            datasets: [{
                label: "Savings",
                fill: false,
                borderColor: "#9966ff",
                tension: 0.3,
                data: compareData.map(x => x.Income - x.Expense)
            }]
        }
    });
</script>
